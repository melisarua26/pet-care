<div class="row justify-content-center">
  <div class="col-10 col-sm-6">
    <div class="card">
      <div class="card-header">
        Registrar mascotas
      </div>
      <div class="card-body">
        <%= simple_form_for(@pet) do |f| %>
          <%= f.input :name,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "nombre" }%>
          <%= f.input :gender,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "gender" }%>
          <%= f.input :birthdate,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "birthdate" }%>
          <%= f.input :specie,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "specie" }%>
          <%= f.input :breed,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "breed" }%>
          <%= f.input :photo, as: :file%>
          <%= f.submit "Guardar"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
