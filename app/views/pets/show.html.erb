<div class="container justify-content center">
  <%# <%= locale["pet"].inspect%>
  <% if @pet.photo.attached? %>
  <%= cl_image_tag @pet.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <h2><%= @pet.name %></h2>
  <p><%= @pet.gender %></p>
  <p><%= @pet.breed %></p>
  <p>Owner: <%= @pet.user.email %></p>
<div class="btn-group" role="group" aria-label="Basic example">
  <%= button_to "Back to pets", pets_path, method: :get, class: "btn btn-primary" %>
  <%= link_to "Edit pet", edit_pet_path(@pet), class: "btn btn-primary" %>
  <%= button_to "Eliminar", @pet, method: :delete, class: "btn btn-primary", data: {turbo_confirm: "Estas seguro?"} %>
  <%= link_to "Crear nueva cita", new_appointment_path, class: "btn btn-primary"  %>

</div>
