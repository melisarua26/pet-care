<div class= "card my-3">
    <%= cl_image_tag locals[:pet].photo.key, height: 400, width: 600, crop: :fill %>
    <%= cl_image_tag locals[:pet].photo.key, height: 185, class:"card-image-top" %>
    <div class="card-body">
      <h3 class="card-title"><%= link_to(locals[:owner_record].name, locals[:pet], class:"text-secondary")%></h3>
      <p class="card-text"><strong>Date:</strong>
      <%= locals[:owner_record].date %></p>
      <p class="card-text"><strong>Type:</strong>
      <%= locals[:owner_record].type %></p>
      <p class="card-text"><strong>Description:</strong>
      <%= locals[:owner_record].description %></p>
    </div>
</div>
