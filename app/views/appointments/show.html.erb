<div class="py-5">
  <div class="container">

    <div class="w-75 mx-auto">
      <div class="card" >
        <div class="card-body">
          <h3 class="card-title"><%= @appointment.title %></h3>
          <p class="card-text"><%= @appointment.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Desde <%= @appointment.start_time.strftime("%d/%m/%Y %H:%M") %></li>
          <li class="list-group-item">Hasta <%= @appointment.end_time.strftime("%d/%m/%Y %H:%M") %></li>
        </ul>
        <div class="card-body d-flex">
          <%= button_to "Eliminar", @appointment, method: :delete, class: "btn btn-outline-secondary me-2", data: {turbo_confirm: "Estas seguro?"} %>
          <%= link_to "Edit appointment", edit_appointment_path(@appointment), class: "btn btn-primary" %>
        </div>
      </div>
       <%= button_to "Back to calendar", appointments_path, method: :get, class: "btn btn-link" %>
    </div>
  </div>
</div>
